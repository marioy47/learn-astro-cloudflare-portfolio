---
import BaseLayout from '../layouts/base-layout.astro';
import {Image} from 'astro:assets';
import Fox from '../assets/fox.jpg';

const pageTitle: string = `Home`;
const h1Color: string = `#fff`;
const h1Bg: string = `#000`;
---
<BaseLayout pageTitle={pageTitle}>
	<h1>{pageTitle}</h1>
	<p>Lorem ipsum dolor</p>
	<Image src={Fox} height={400} alt="Taken from randomfox.ca"/>
	<Image src="/favicon.svg" alt="The Favicon" width={200} height={200}/>
</BaseLayout>

<style define:vars={{h1Color, h1Bg}}>
	 h1 {
		color: var(--h1Color);
		background-color: var(--h1Bg);
	}
</style>
